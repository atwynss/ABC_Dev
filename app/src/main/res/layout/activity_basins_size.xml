<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/dgrey"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout


            android:layout_width="1028px"
            android:layout_height="110px"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@color/cred"
            android:weightSum="25"
            android:id="@+id/linearLayout"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <ImageView
                android:layout_width="600px"
                android:layout_height="100px"
                app:srcCompat="@mipmap/abctextlogo"
                android:id="@+id/imageView2"

                android:layout_marginTop="5px"
                android:layout_marginBottom="5px"
                android:layout_marginLeft="10dp"
                />

            <ImageView
                android:layout_width="20dp"
                android:src="@mipmap/backbutton"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:id="@+id/backone"
                android:cropToPadding="false"
                android:layout_height="20dp" />


        </LinearLayout>

    <TextView
        android:text="Select Product By Size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:gravity="center"


        android:layout_marginTop="10dp"
        android:typeface="normal"


        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        android:textColor="@color/cred" />

    <Button
        android:text="VIEW ALL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:gravity="center"
        android:background="@color/cred"
        android:textColor="@color/white"
        android:layout_marginTop="500dp"

        android:layout_centerHorizontal="true" />

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="100dp"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <ListView
                android:id="@+id/listView1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="23dp"
                android:background="@color/common_google_signin_btn_text_light_disabled"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="2dp"
                android:gravity="center"></ListView>
        </TableLayout>
    </ScrollView>

</RelativeLayout>

