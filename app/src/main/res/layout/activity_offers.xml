<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_resources"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.admin.abc.Offers">
    <LinearLayout


        android:layout_width="1028px"
        android:layout_height="110px"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/cred"
        android:weightSum="25"
        android:id="@+id/linearLayout"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:layout_width="600px"
            android:layout_height="100px"
            app:srcCompat="@mipmap/abctextlogo"
            android:id="@+id/imageView2"

            android:layout_marginTop="5px"
            android:layout_marginBottom="5px"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:layout_width="20dp"
            android:src="@mipmap/backbutton"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:id="@+id/back16"
            android:cropToPadding="false"
            android:layout_height="20dp" />



    </LinearLayout>
</RelativeLayout>
