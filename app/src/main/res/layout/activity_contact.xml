<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:fillViewport="false"
    >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contact"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"


    tools:context="com.example.admin.abc.Contact">
    <LinearLayout


        android:layout_width="1028px"
        android:layout_height="110px"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/cred"
        android:weightSum="25"
        android:id="@+id/linearLayout"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:layout_width="600px"
            android:layout_height="100px"
            app:srcCompat="@mipmap/abctextlogo"
            android:id="@+id/imageView2"

            android:layout_marginTop="5px"
            android:layout_marginBottom="5px"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:layout_width="20dp"
            android:src="@mipmap/backbutton"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:id="@+id/back6"
            android:cropToPadding="false"
            android:layout_height="20dp" />


    </LinearLayout>

    <TextView
        android:text="Visit Our Branches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textColor="@color/cred"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="130px"
        android:fontFamily="sans-serif" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/ddgrey"
        android:layout_marginTop="10dp"
        android:id="@+id/r1"

        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Cochin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/relativeLayout"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:id="@+id/tx13"
            android:textColor="@color/cred"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/tx8"
            android:layout_marginTop="10dp"
            android:text="Working Hours :9:00 AM to 6:00 PM"
            android:textColor="@android:color/black"
            android:layout_alignTop="@+id/im5"
            android:layout_alignStart="@+id/tx15" />

        <ImageView
            android:layout_width="30dp"
            app:srcCompat="@drawable/time"
            android:id="@+id/im5"
            android:layout_marginTop="10dp"
            android:layout_height="30dp"
            android:layout_below="@+id/im4"
            android:layout_alignStart="@+id/tx13" />

        <ImageView
            app:srcCompat="@drawable/location"
            android:id="@+id/im4"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/im5"
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tx15"
            android:layout_marginTop="10dp"
            android:text="Abc Buildwares India Pvt Ltd (Branch),
 Door No 5/387D, Pookkattupady Road, Trikkakkara, Cochin "
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:layout_above="@+id/tx8"
            android:layout_toEndOf="@+id/im4"
            android:layout_marginStart="20dp"
            android:textAlignment="viewStart" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/ddgrey"
        android:id="@+id/r2"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/r1"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Cochin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/relativeLayout"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:id="@+id/tx13"
            android:textColor="@color/cred"
            android:textSize="18sp" />

        <ImageView
            app:srcCompat="@drawable/location"
            android:id="@+id/im4"
            android:layout_marginTop="10dp"
            android:layout_alignBottom="@+id/tx15"
            android:layout_alignStart="@+id/tx13"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/tx15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tx15"
            android:layout_marginTop="10dp"
            android:text="Exim Ceramix, Door No 5/191M,
Kallupurakkal Building, Pookkattupadi Road, Trikkakara, Cochin "
            android:textColor="@android:color/black"
            android:layout_marginStart="11dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/im4"
            android:textAlignment="viewStart" />

        <ImageView
            android:layout_width="30dp"
            app:srcCompat="@drawable/time"
            android:id="@+id/im5"
            android:layout_marginTop="10dp"
            android:layout_height="30dp"
            android:layout_below="@+id/im4"
            android:layout_alignStart="@+id/im4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/tx28"
            android:text="Working Hours :9:00 AM to 6:00 PM"
            android:textColor="@android:color/black"
            android:layout_alignTop="@+id/im5"
            android:layout_alignStart="@+id/tx15" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/ddgrey"
        android:id="@+id/r3"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/r2"
        android:layout_alignParentStart="true">


        <TextView
            android:text="Kannur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:textSize="18sp"
            android:textColor="@color/cred" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/location"
            android:layout_below="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginTop="10dp"
            android:id="@+id/imageView7" />

        <TextView
            android:text="ABC EMPORIO, Wafa Centre, N.H Thana, Kannur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:layout_marginTop="10dp"
            android:layout_alignTop="@+id/imageView7"
            android:layout_toEndOf="@+id/imageView7"
            android:layout_marginStart="14dp"
            android:textColor="@color/colorblack" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/time"
            android:layout_below="@+id/imageView7"
            android:layout_alignStart="@+id/imageView7"
            android:layout_marginTop="10dp"
            android:id="@+id/imageView8" />

        <TextView
            android:text="Working Hours : 9:00 AM to 6:00 PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView8"
            android:layout_alignStart="@+id/textView10"
            android:id="@+id/textView12"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorblack" />

    </RelativeLayout>


</RelativeLayout>
</ScrollView>