<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sample"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white"
    >
    <LinearLayout


        android:layout_width="1028px"
        android:layout_height="110px"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/cred"
        android:weightSum="25"
        android:id="@+id/linearLayout"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:layout_width="600px"
            android:layout_height="100px"
            app:srcCompat="@mipmap/abctextlogo"
            android:id="@+id/imageView2"

            android:layout_marginTop="5px"
            android:layout_marginBottom="5px"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:layout_width="20dp"
            android:src="@mipmap/backbutton"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:id="@+id/back30"
            android:cropToPadding="false"
            android:layout_height="20dp" />


    </LinearLayout>





    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_below="@+id/im61"
        android:background="@color/ddgrey" />

    <TextView
        android:text="Lady  Effects Glaze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:id="@+id/textView22"
        android:layout_below="@+id/im61"

        android:layout_marginTop="10dp"
        android:textColor="@color/cred"
        android:textSize="24sp" />

    <TextView
        android:text="BRANDS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView22"
        android:layout_alignStart="@+id/textView22"
        android:layout_marginTop="50dp"
        android:id="@+id/textView23"
        android:textColor="@color/colorblack" />

    <TextView
        android:text=":"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView23"
        android:layout_alignEnd="@+id/textView22"
        android:layout_marginEnd="10dp"
        android:id="@+id/textView25"
        android:textColor="@color/colorblack" />

    <TextView
        android:text="SIZE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView23"
        android:layout_alignStart="@+id/textView23"
        android:layout_marginTop="20dp"
        android:id="@+id/textView26"
        android:textColor="@color/colorblack" />

    <TextView
        android:text=":"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView26"
        android:layout_alignStart="@+id/textView25"
        android:id="@+id/textView27"
        android:textColor="@color/colorblack" />

    <TextView
        android:text="500 * 500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView27"
        android:layout_alignStart="@+id/textView24"
        android:id="@+id/textView28"
        android:textColor="@color/colorblack" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView26"
        android:layout_alignStart="@+id/textView26"
        android:layout_marginTop="19dp"
        android:id="@+id/textView29"
        android:text="COLOR"
        android:textColor="@color/colorblack" />

    <TextView
        android:text=":"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView29"
        android:layout_alignStart="@+id/textView27"
        android:id="@+id/textView30"
        android:textColor="@color/colorblack" />

    <TextView
        android:text="Various"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView30"
        android:layout_alignStart="@+id/textView28"
        android:id="@+id/textView36"
        android:textColor="@color/colorblack" />

    <TextView
        android:text="JOTUN PAINTS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView24"
        android:layout_alignBaseline="@+id/textView25"
        android:layout_alignBottom="@+id/textView25"
        android:layout_alignEnd="@+id/im61"
        android:textColor="@color/colorblack" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"

        android:id="@+id/im61"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        app:srcCompat="@mipmap/paintone" />


</RelativeLayout>
