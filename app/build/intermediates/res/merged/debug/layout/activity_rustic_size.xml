<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/dgrey"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout


        android:layout_width="1028px"
        android:layout_height="110px"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/cred"
        android:weightSum="25"
        android:id="@+id/linearLayout"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:layout_width="600px"
            android:layout_height="100px"
            app:srcCompat="@mipmap/abctextlogo"
            android:id="@+id/imageView2"

            android:layout_marginTop="5px"
            android:layout_marginBottom="5px"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:layout_width="20dp"
            android:src="@mipmap/backbutton"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:id="@+id/back19"
            android:cropToPadding="false"
            android:layout_height="20dp" />


    </LinearLayout>



    <Button
        android:text="530 * 400"
        android:layout_height="wrap_content"
        android:background="@color/common_google_signin_btn_text_light_disabled"
        android:drawableRight="@drawable/nextf"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorblack"
        android:textSize="24sp"
        android:typeface="normal"
        android:fontFamily="sans-serif"
        android:id="@+id/buttonrs4"
        android:layout_below="@+id/buttonrs3"
        android:layout_alignStart="@+id/buttonrs3"
        android:layout_marginTop="10dp"
        android:layout_width="680px" />

    <Button
        android:text="450 * 300"
        android:drawableRight="@drawable/nextf"
        android:layout_height="wrap_content"
        android:id="@+id/buttonrs3"
        android:background="@color/common_google_signin_btn_text_light_disabled"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorblack"
        android:textSize="24sp"
        android:typeface="normal"
        android:fontFamily="sans-serif"
        android:layout_below="@+id/buttonrs2"
        android:layout_alignStart="@+id/buttonrs2"
        android:layout_marginTop="10dp"
        android:layout_width="680px" />

    <Button
        android:text="400 * 400"
        android:drawableRight="@drawable/nextf"
        android:layout_height="wrap_content"
        android:id="@+id/buttonrs2"
        android:background="@color/common_google_signin_btn_text_light_disabled"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorblack"
        android:textSize="24sp"
        android:typeface="normal"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:layout_below="@+id/buttonrs1"
        android:layout_alignStart="@+id/buttonrs1"
        android:layout_marginTop="10dp"
        android:layout_width="680px" />

    <Button
        android:text="500 * 600"
        android:drawableRight="@drawable/nextf"


        android:layout_height="wrap_content"
        android:id="@+id/buttonrs1"

        android:background="@color/common_google_signin_btn_text_light_disabled"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorblack"
        android:textSize="24sp"
        android:typeface="normal"
        android:fontFamily="sans-serif"

        android:layout_marginTop="10dp"
        android:layout_below="@+id/buttonrs"
        android:layout_alignStart="@+id/buttonrs"
        android:layout_width="680px" />

    <TextView
        android:text="Select Product By Size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:gravity="center"


        android:layout_marginTop="10dp"
        android:typeface="normal"


        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        android:textColor="@color/cred" />

    <Button
        android:text="VIEW ALL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:gravity="center"
        android:background="@color/cred"
        android:textColor="@color/white"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/buttonrs4"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="400 * 500"
        android:id="@+id/buttonrs"
        android:drawableRight="@drawable/nextf"
        android:layout_height="wrap_content"
        android:background="@color/common_google_signin_btn_text_light_disabled"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorblack"
        android:textSize="24sp"

        android:typeface="normal"
        android:fontFamily="sans-serif"
        android:layout_marginTop="24dp"
        android:layout_width="680px"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

