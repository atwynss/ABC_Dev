<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_enquiry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white"
    tools:context="com.example.admin.abc.Enquiry"
 >
    <LinearLayout


        android:layout_width="1028px"
        android:layout_height="110px"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/cred"
        android:weightSum="25"
        android:id="@+id/linearLayout"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:layout_width="600px"
            android:layout_height="100px"
            app:srcCompat="@mipmap/abctextlogo"
            android:id="@+id/imageView2"

            android:layout_marginTop="5px"
            android:layout_marginBottom="5px"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:layout_width="20dp"
            android:src="@mipmap/backbutton"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:id="@+id/back7"
            android:cropToPadding="false"
            android:layout_height="20dp" />



    </LinearLayout>

    <RelativeLayout
        android:layout_width="680px"
        android:layout_height="450dp"
        android:background="@color/colorblack"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="130px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="300dp"

            android:ems="10"
            android:id="@+id/editText5"

            android:hint="Comment"
            android:background="@color/white"
            android:layout_below="@+id/editText4"
            android:layout_alignStart="@+id/editText4"
            android:layout_marginTop="20dp"
            android:layout_height="100dp"
            android:paddingTop="1dp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/black"
            android:inputType="text" />

        <EditText
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:id="@+id/editText"
            android:cursorVisible="true"
            android:hint="Name"
            android:layout_height="40dp"
            android:layout_width="300dp"
            android:layout_below="@+id/textView9"
            android:layout_centerHorizontal="true"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/black" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:id="@+id/editText3"
            android:background="@color/white"
            android:cursorVisible="true"
            android:hint="Email"
            android:layout_below="@+id/editText"
            android:layout_alignStart="@+id/editText"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:inputType="phone"
            android:ems="10"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:id="@+id/editText4"
            android:hint="Contact No."
            android:layout_below="@+id/editText3"
            android:layout_alignStart="@+id/editText3"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/black" />

        <Button
            android:text="SEND"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_dark"
            android:id="@+id/button7"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/editText5"
            android:layout_alignStart="@+id/editText5"
            android:textStyle="normal|bold"
            android:textSize="18sp" />

        <TextView
            android:text="Make An Enquiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:textStyle="normal|bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>
